{
    "name": "orgchart",
    "widgetName": "OrgChart",
    "version": "1.0.2",
    "description": "This widget builds an organizational chart based on child and parent key values. Every node in the chart is drag and droppable, allowing to set event handlers on drag start or drop events.",
    "copyright": "",
    "author": "Ammar Rizvi",
    "config": {
        "widgetPath": "../../widgets",
        "projectPath": "../../",
        "mendixHost": "http://localhost:8080",
        "developmentPort": "3000"
    },
    "packagePath": "mendix",
    "scripts": {
        "start": "concurrently \"pluggable-widgets-tools start:server --open\" \"npm:dev\"",
        "dev": "pluggable-widgets-tools start:web",
        "build": "pluggable-widgets-tools build:web",
        "lint": "pluggable-widgets-tools lint",
        "lint:fix": "pluggable-widgets-tools lint:fix",
        "prerelease": "npm run lint",
        "release": "pluggable-widgets-tools release:web"
    },
    "license": "Apache-2.0",
    "devDependencies": {
        "@mendix/pluggable-widgets-tools": "^8.18.2",
        "react-addons-perf": "^15.4.2",
        "react-dom": "^17.0.2"
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "file-saver": "^2.0.5",
        "html-to-image": "^1.7.0",
        "react-dnd": "^11.1.3",
        "react-dnd-html5-backend": "^11.1.3",
        "react-organizational-chart": "^1.1.0",
        "react-search-autocomplete": "^5.4.2"
    }
}
